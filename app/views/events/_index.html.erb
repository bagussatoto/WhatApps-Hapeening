<div class="color-bg" style="background: #00896C;">
  <div class="container">
    <div class="col-md-12">
      <h1>Events</h1>
      <p>Here are the events that are currently happening!</p>

      <div class="table-responsive">
        <table class="table">
          <thead>
            <tr>
              <td>Name</td>
              <td>Start Date</td>
              <td>End Date</td>
              <td>Location</td>
              <td>Link</td>
            </tr>
          </thead>
          <tbody>
            <% @events.each do |event| %>
              <tr>
                <td><%= event.name %></td>
                <td><%= Event.humanize_date event.start_date %></td>
                <td><%= Event.humanize_date event.end_date %></td>
                <td><%= event.location %></td>
                <td><%= link_to event.link, event.link %></td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

